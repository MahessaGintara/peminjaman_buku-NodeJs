aside.main-sidebar
    section.sidebar
        .user-panel
            if (user !="")
                .pull-left.image
                    img(src='/adminlte/dist/img/user2-160x160.jpg',alt='User Image').img-align-left.img-circle
                .pull-left.info
                    p #{user[0]}
                    a(href='#')
                        i.fa.fa-globe-europe.text-success
                            if (user[2]==1)
                                | Admin
                            else 
                                | Member
        form(action='#',method='get').sidebar-form
            .input-group
                input(type='text', name='q',placeholder='Search...').form-control
                span.input-group-btn
